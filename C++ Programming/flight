#include<iostream>
#include<string.h>
using namespace std;
class flight
{
	private:
		int number;
		float distance,fuel;
		char destination[50];
		void calfuel();
	public:
		void feed_info();
		void show_fuel();
};
void flight::calfuel()
{
	if(distance<=1000)
	{
		cout<<"Fuel=500"<<endl;
	}
	else if((distance>1000)&&(distance<=2000))
	{
		cout<<"Fuel=1100"<<endl;
	}
	else if(distance>=2000)
	{
		cout<<"Fuel=2200"<<endl;
	}
}
void flight::feed_info()
{
	cout<<"Flight Number: ";
	cin>>number;
	cout<<"Distance: ";
	cin>>distance;
	cout<<"Destination: ";
	cin>>destination;
	calfuel();
}
void flight::show_fuel()
{
	cout<<"Flight Number: "<<number<<endl;
	cout<<"Destination: "<<destination<<endl;
	cout<<"Distance: "<<distance<<endl;
	//cout<<"Fuel: "<<fuel<<endl;
}
int main()
{
	flight p;
	p.feed_info();
	p.show_fuel();
}